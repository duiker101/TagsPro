<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Title"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/action_toggle_expand"
        style="@style/CardFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:tint="#aaa"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_expand_white_24dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <ImageButton
        android:id="@+id/action_select"
        style="@style/CardFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:tint="#aaa"
        app:layout_constraintTop_toBottomOf="@id/recycler"
        app:srcCompat="@drawable/ic_check_white_24dp" />

    <ImageButton
        android:id="@+id/action_shuffle"
        style="@style/CardFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:tint="#aaa"
        app:layout_constraintLeft_toRightOf="@id/action_select"
        app:layout_constraintTop_toBottomOf="@id/recycler"
        app:srcCompat="@drawable/ic_shuffle_white_24dp" />

    <ImageButton
        android:id="@+id/action_deselect"
        style="@style/CardFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:tint="#aaa"
        app:layout_constraintLeft_toRightOf="@id/action_shuffle"
        app:layout_constraintTop_toBottomOf="@id/recycler"
        app:srcCompat="@drawable/ic_clear_white_24dp" />

    <ImageButton
        android:id="@+id/action_overflow"
        style="@style/CardFlatButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:tint="#aaa"
        app:layout_constraintBottom_toBottomOf="@id/action_deselect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler"
        app:srcCompat="@drawable/ic_more" />

</android.support.constraint.ConstraintLayout>